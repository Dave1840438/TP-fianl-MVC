@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model ForumDImage.ViewModels.UserValidationModel
}

@using (Html.BeginForm())
{
    Html.ValidationSummary(false);
    <fieldset>
        <legend>Ajouter un Usager</legend>
        <table>
            <tr>
                <td>@Html.LabelFor(model => model.NomUtilisateur)</td>
                <td>@Html.TextBoxFor(model => model.NomUtilisateur)*</td>
                <td>@Html.ValidationMessageFor(model => model.NomUtilisateur)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.NomComplet)</td>
                <td>@Html.TextBoxFor(model => model.NomComplet)</td>
                <td>@Html.ValidationMessageFor(model => model.NomComplet)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.MotDePasse)</td>
                <td>@Html.TextBoxFor(model => model.MotDePasse)*</td>
                <td>@Html.ValidationMessageFor(model => model.MotDePasse)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ConfirmMotDePasse)</td>
                <td>@Html.TextBoxFor(model => model.ConfirmMotDePasse)*</td>
                <td>@Html.ValidationMessageFor(model => model.ConfirmMotDePasse)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Email)</td>
                <td>@Html.TextBoxFor(model => model.Email)</td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.ConfirmEmail)</td>
                <td>@Html.TextBoxFor(model => model.ConfirmEmail)</td>
                <td>@Html.ValidationMessageFor(model => model.ConfirmEmail)</td>
            </tr>
        </table>
        *Obligatoire
        <br />
        <input type="submit" value="Inscription" />
        <br />
        @ViewBag.Message
    </fieldset>
}