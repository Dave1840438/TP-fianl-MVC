@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model ForumDImage.Models.Utilisateur
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Se connecter</legend>
        <table>
            <tr>
                <td>@Html.LabelFor(model => model.NomUtilisateur)</td>
                <td>@Html.TextBoxFor(model => model.NomUtilisateur)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.MotDePasse)</td>
                <td>@Html.TextBoxFor(model => model.MotDePasse)</td>
            </tr>
        </table>

        <br />
        <input type="submit" value="Connection" />
    </fieldset>
    <label style="color:red">@ViewBag.Message</label>
}